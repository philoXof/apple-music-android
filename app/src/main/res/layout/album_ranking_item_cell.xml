<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_album_ranking_item_cell"
        android:layout_width="match_parent"
        android:layout_height="90dp">


        <TextView
            android:id="@+id/album_ranking_number"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"

            app:layout_constraintTop_toTopOf="@id/constraint_album_ranking_item_cell"
            app:layout_constraintLeft_toLeftOf="@id/constraint_album_ranking_item_cell"/>



        <ImageView
            android:id="@+id/album_ranking_cover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"

            android:src="@drawable/ic_placeholder_album"

            app:layout_constraintTop_toTopOf="@id/constraint_album_ranking_item_cell"
            app:layout_constraintLeft_toRightOf="@id/album_ranking_number"/>


        <TextView
            android:id="@+id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="10dp"

            app:layout_constraintTop_toTopOf="@id/constraint_album_ranking_item_cell"
            app:layout_constraintLeft_toRightOf="@id/album_ranking_cover"/>

        <TextView
            android:id="@+id/album_artist"
            android:layout_width="wrap_content"
            android:layout_height="35dp"

            app:layout_constraintTop_toBottomOf="@+id/album_title"
            app:layout_constraintLeft_toRightOf="@id/album_ranking_cover"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>