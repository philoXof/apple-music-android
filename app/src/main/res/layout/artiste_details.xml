<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <ImageView
        android:id="@+id/like_button"
        android:src="@drawable/ic_like_off"
        android:layout_width="40dp"
        android:layout_height="40dp"

        app:layout_constraintRight_toLeftOf="@id/v_right_guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/favoris_button_content_description" />

    <ImageView
        android:id="@+id/fleche"
        android:src="@drawable/ic_fleche_gauche"
        android:layout_width="40dp"
        android:layout_height="40dp"

        app:layout_constraintLeft_toLeftOf="@id/v_left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_button_content_description" />

    <ImageView
        android:id="@+id/artiste_image"
        android:layout_width="370dp"
        android:layout_height="278dp"
        android:background="@drawable/ic_etoile"

        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@id/v_left_guideline"
        app:layout_constraintRight_toRightOf="@id/v_right_guideline"

        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/artiste_image" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/artiste_name"

        app:layout_constraintBottom_toTopOf="@+id/artiste_location"
        app:layout_constraintLeft_toRightOf="@+id/v_left_guideline"
        />

    <TextView
        android:id="@+id/artiste_location"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/artists_location"

        app:layout_constraintLeft_toRightOf="@id/v_left_guideline"
        app:layout_constraintBottom_toBottomOf="@id/artiste_image"
        />

    <TextView
        android:id="@+id/artiste_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/artist_description"

        app:layout_constraintEnd_toStartOf="@+id/v_right_guideline"
        app:layout_constraintLeft_toRightOf="@id/v_left_guideline"
        app:layout_constraintRight_toLeftOf="@id/v_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/artiste_image" />

    <TextView
        android:id="@+id/album_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/albums_artist_profil"

        app:layout_constraintTop_toBottomOf="@+id/artiste_description"
        app:layout_constraintLeft_toRightOf="@id/v_left_guideline"

        />

    <TextView
        android:id="@+id/album_list"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="liste des albums  (temporaire)"

        app:layout_constraintTop_toBottomOf="@+id/album_title"
        app:layout_constraintLeft_toRightOf="@id/v_left_guideline"
        />

    <TextView
        android:id="@+id/song_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/top_10_tracks"

        app:layout_constraintTop_toBottomOf="@+id/album_list"
        app:layout_constraintLeft_toRightOf="@id/v_left_guideline"
        />

    <TextView
        android:id="@+id/song_list"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="top 10 des chansons (temporaire)"

        app:layout_constraintTop_toBottomOf="@+id/song_title"
        app:layout_constraintLeft_toRightOf="@id/v_left_guideline"
        />
</androidx.constraintlayout.widget.ConstraintLayout>